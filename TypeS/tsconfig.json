{
    "compilerOptions": {
        "module": "ESNext", // Specifies the module code generation method. ESNext allows for the latest ECMAScript module features.
        "target": "ESNext", // Sets the JavaScript language version for emitted JavaScript and includes compatible library declarations.
        "moduleResolution": "Node", // Determines how modules are resolved. Node is suitable for Node.js applications.
        "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules.
        "skipLibCheck": true, // Skips type checking of all declaration files (*.d.ts).
        "strict": true // Enables all strict type-checking options.
    }
}
